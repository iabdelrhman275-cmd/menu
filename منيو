        function setLang(l) {
            curLang = l;
            document.body.dir = (l === 'ar') ? 'rtl' : 'ltr';
            document.getElementById('b-ar').classList.toggle('active', l === 'ar');
            document.getElementById('b-en').classList.toggle('active', l === 'en');
            render();
        }

        function render() {
            const d = data[curLang];
            document.getElementById('h-title').innerText = d.hT;
            document.getElementById('h-sub').innerText = d.hS;
            document.getElementById('h-btn').innerText = d.hB;
            document.getElementById('h-map').innerText = d.hM;
            document.getElementById('m-title').innerText = d.mT;

            let html = '';
            for (let k in d.cats) {
                html += `<div class="box"><h2>${d.cats[k]}</h2>`;
                d.items[k].forEach(i => {
                    html += `<div class="row"><span>${i.n}</span><span class="price">${i.p} AED</span></div>`;
                });
                html += `</div>`;
            }
            document.getElementById('menuBody').innerHTML = html;
        }

        function openMenu() {
            const m = document.getElementById('menu');
            m.style.display = 'block';
            m.className = 'menu-in';
            document.getElementById('backBtn').style.display = 'flex';
        }

        function closeMenu() {
            const m = document.getElementById('menu');
            m.className = 'menu-out';
            setTimeout(() => {
                m.style.display = 'none';
                document.getElementById('backBtn').style.display = 'none';
            }, 1100);
        }

        render();
